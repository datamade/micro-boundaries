        %ul.thumbnails
          - @microbe_photos[0..2].each_with_index do |photo, index|
            %li.span4.text-center
              %img.img-polaroid{ :src => photo.image_url }
              %br
              %span.badge 
                - if photo.score == 1
                  #{photo.score} point
                - else
                  #{photo.score} points
              
              %a{:href => "/microbe/#{photo.tag}"}
                %span{:class => "badge #{photo.tag}"} ##{photo.tag}
              %p
                = photo.caption
    

